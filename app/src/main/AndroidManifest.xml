<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sommayah.writewithmeinarabic2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlphabetActivity"
            android:label="@string/title_activity_alphabet"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PracticeActivity"
            android:label="@string/title_activity_practice"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PlayActivity"
            android:label="@string/title_activity_play"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TranslationActivity"
            android:label="@string/title_activity_translation"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>