<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_practice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sommayah.writewithmeinarabic2.PracticeActivity"
    tools:showIn="@layout/activity_practice">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_dimen"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="7.9"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/print"
                android:onClick="onNextClicked"
                android:scaleType="centerInside"
                android:src="@drawable/print48" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal" >


                    <ImageButton
                        android:id="@+id/previous"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/previous"
                        android:onClick="onPreviousClicked"
                        android:scaleType="centerInside"
                        android:src="@drawable/previous"
                        android:layout_marginLeft="@dimen/button_small_margin"
                        android:layout_marginRight="@dimen/button_small_margin"
                        android:layout_marginEnd="@dimen/button_small_margin"
                        android:layout_marginStart="@dimen/button_small_margin" />

                    <ImageButton
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/next"
                        android:onClick="onNextClicked"
                        android:scaleType="centerInside"
                        android:src="@drawable/next"
                        android:layout_marginLeft="@dimen/button_small_margin"
                        android:layout_marginRight="@dimen/button_small_margin"
                        android:layout_marginEnd="@dimen/button_small_margin"
                        android:layout_marginStart="@dimen/button_small_margin"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/write"
                    android:onClick="onWriteClicked"
                    android:scaleType="centerInside"
                    android:src="@drawable/designyourpage"
                    android:layout_marginLeft="@dimen/button_small_margin"
                    android:layout_marginRight="@dimen/button_small_margin"
                    android:layout_marginEnd="@dimen/button_small_margin"
                    android:layout_marginStart="@dimen/button_small_margin"/>


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/erase"
                android:onClick="onEraseClicked"
                android:scaleType="centerInside"
                android:src="@drawable/erase_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/blue"
                android:onClick="onDrawClicked"
                android:scaleType="centerInside"
                android:tag="#0000FF"
                android:src="@drawable/blue_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/red"
                android:onClick="onDrawClicked"
                android:scaleType="centerInside"
                android:tag="#FF0000"
                android:src="@drawable/red_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/yellow"
                android:onClick="onDrawClicked"
                android:scaleType="centerInside"
                android:tag="#FFFF00"
                android:src="@drawable/yellow_btn" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/green"
                android:onClick="onDrawClicked"
                android:scaleType="centerInside"
                android:tag="#00CC00"
                android:src="@drawable/green_btn" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/trash"
                android:onClick="onNewClicked"
                android:scaleType="centerInside"
                android:src="@drawable/trash" />
        </LinearLayout>





    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/button_margin"
        android:background="@drawable/lion"
        android:id="@+id/background_layout">

        <ImageButton
            app:srcCompat="@drawable/ic_volume_up_black_24dp"
            android:id="@+id/imageButton4"
            android:background="@android:color/transparent"
            android:onClick="onPlaySoundClicked"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/audio_btn_dimen"
            android:layout_width="@dimen/audio_btn_dimen" />

        <include layout="@layout/writing_view"/>

        <com.sommayah.writewithmeinarabic2.DrawingView
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/audio_btn_dimen" />

    </RelativeLayout>




</LinearLayout>
